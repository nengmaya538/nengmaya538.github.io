<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

{% assign all_keywords = "" | split: "" %}
{% for post in site.posts %}
  {% if post.keywords %}
    {% assign all_keywords = all_keywords | concat: post.keywords %}
  {% endif %}
{% endfor %}

{% assign unique_keywords = all_keywords | uniq %}

{% for keyword in unique_keywords %}
  <url>
    <loc>{{ "/keywords/?q=" | append: keyword | uri_escape | absolute_url }}</loc>
  </url>
{% endfor %}


</urlset>
